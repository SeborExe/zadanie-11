#include "P1.h"
#include "P2.cpp"
#include <conio.h>
#include <cstdlib>
#include <conio.h>
#include <stdio.h>
#include <string>
#include <iostream>
#include <string.h>
#include <fstream>

using namespace std;


int main()
{
class lista *baza;
 baza=new lista();
 baza->dodaj("Jan","Nowak","1");
 baza->dodaj("Jan","Nowak","2");
 baza->dodaj("Jan","Nowak","3");
 baza->wyswietl();


//menu
cout << "MENU GLOWNE" << endl;
cout << "--------------------------"<<endl;
cout << "1. Pobierz/wprowadz dane" << endl;
cout << "2. Usun dane z pamieci" << endl;
cout << "3. Wyswietl dane" << endl;
cout << "4. Koniec" << endl;
cout << "--------------------------"<<endl;
//program
do
{
    fflush(stdin);
    cout << "Twoj wybor: " << endl;
    znak=getch();
    switch(znak)
    {
   case '1':
       class lista *baza;
 baza=new lista();
 baza->dodaj("jAN","Nowak","1");
 baza->dodaj("Jan","Nowak","2");
 baza->dodaj("Jan","Nowak","3");
 baza->wyswietl();

        break;
    case '2':
        lista->wyswietl();
        lista->kasuj(2);
        lista->wyswietl();
        break;
    case '3':
        lista->wyswietl();
        break;
    case '4':
        cout << "Koniec" << endl;
        break;
    default:
        cout << "Wybierz ponownie sposrod opcji 1-4!" << endl;
    }
}
while(znak!='4');
delete lista;
return 0;
};


